<table id="chantier"  class="styled-table">
	<tr>
		<%= render @chantier %>
	</tr>
	<tr><td><%= link_to "Modifier ce chantier", edit_chantier_path(@chantier) %></td></tr>
</table>
<h2>Utilisations sur ce chantier</h2>

<%= render "utilisations/utilisations", utilisations: @chantier.utilisations.order(created_at: :desc) %>

<h2>Commandes sur ce chantier</h2>

<%= render "commandes/commandes", commandes: @chantier.commandes.order(created_at: :desc) %>


<p>
	<%= link_to "Liste des chantiers", chantiers_path %>
</p>