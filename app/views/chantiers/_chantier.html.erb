<tr id="<%= dom_id chantier %>">
    <td><%= link_to chantier.nom, chantier  %></td>
    <td><%= link_to chantier.client.nom, chantier.client  %></td>
    <td><%= chantier.date_de_livraison.strftime("%d/%m/%Y") %></td>
    <td>
        <% if chantier.equilibre? %>
            Non
        <% else %>
            Oui
        <% end %>
    </td>
    <td><%= link_to "Modifier ce chantier", edit_chantier_path(chantier) %></td>
</tr>