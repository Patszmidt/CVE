<table id="client"  class="styled-table">
    <tr>
        <th>Nom</th>
    </tr>
	<%= render @client %>
</table>

<h2>Chantiers associés à ce client</h2>

<table id="chantiers"  class="styled-table">
  <tr>
    <th>Chantier</th>
    <th>Achats à passer?</th>
  </tr>
  <% @client.chantiers.each do |chantier| %>
    <%= render chantier %>
  <% end %>
</table>

<p>
	<%= link_to "Liste des clients", clients_path %>
</p>

